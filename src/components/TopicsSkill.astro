---
import JavaScript from "@icons/JavaScript.astro";
import Python from "@icons/Python.astro";
import Go from "@icons/Go.astro";
import TypeScript from "@icons/TypeScript.astro";

interface Props {
  skill: string;
  subSkills: string[];
  customClass: string;
}

const { skill, subSkills, customClass }: Props = Astro.props as Props;

const iconMap: Record<string, any> = {
  JavaScript: JavaScript,
  Python: Python,
  Go: Go,
  TypeScript: TypeScript,
};
---

<div id='skills' class=`grid grid-cols-2 transition-opacity duration-500 w-[33%]`>
  <h2 class=`text-lg font-bold ${customClass} flex`>{skill}</h2><br/>

  <div id='sub-skills' class="w-full">
    {subSkills.map((element) => {
      const Icon = iconMap[element];

      return (
        <div class=`flex items-center pb-10 ${customClass}`>
          {Icon && <Icon class='w-10 h-10' />} 
          <span>{element}</span>
        </div>
      );
    })}
  </div>
</div>
